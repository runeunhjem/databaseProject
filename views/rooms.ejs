<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/navbar") %>

    <div class="container text-center mt-5">
      <h1 class="text-light">Available Rooms</h1>
      <div class="room-list">
        <% rooms.forEach(room => { %>
        <div class="room-card <% if (room.is_reserved && user) { %> reserved-room <% } %>">
          <div class="room-info">
            <div class="room-hotel"><%= room.hotel_name %> in <%= room.hotel_location %></div>
            <div><strong><%= room.room_type %></strong></div>
            <div><strong>Capacity: <%= room.max_capacity %></strong></div>
            <div class="mb-1"><strong>Price: $<%= room.price %> per night</strong></div>
          </div>

          <% if (room.is_reserved) { %>
          <p class="reservation-notice">You already have a reservation here!</p>
          <% } else { %>
          <p class="reservation-placeholder">Room is available</p>
          <% } %>

          <div class="room-actions">
            <a href="/hotels/<%= room.hotel_id %>" class="btn-secondary">View Hotel</a>
            <% if (user) { %> <% if (!room.is_reserved) { %>
            <button class="btn-primary rent-room" data-id="<%= room.id %>">Rent</button>
            <% } else { %>
            <a href="/users/<%= user.id %>" class="btn-warning">Reservations</a>
            <% } %> <% } %>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <!-- âœ… Reservation Modal -->
    <div id="reservationModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h3 class="text-center mt-3">Book a Room</h3>
        <div class="form-group">
          <label for="start-date">Start Date:</label>
          <input type="date" id="start-date" class="form-control" />
        </div>
        <div class="form-group">
          <label for="end-date">End Date:</label>
          <input type="date" id="end-date" class="form-control" />
        </div>
        <button id="confirm-reservation" class="btn btn-primary">Confirm Reservation</button>
      </div>
    </div>

    <!-- Back to Top Button -->
    <button id="backToTop" class="back-to-top btn btn-warning">
      <i class="bi bi-arrow-up-circle-fill"></i>
    </button>

    <script src="/javascripts/backToTop.js"></script>
    <script src="/javascripts/makeReservation.js"></script>
    <%- include("partials/footer") %>
  </body>
</html>
