  <%- include("partials/head") %>
  <body>
    <%- include("partials/navbar") %>

    <!-- Room Cards & Add “View Hotel” Button -->
    <div class="container">
      <h2 class="p-3 text-center text-light">Available Rooms</h2>
      <div class="row">
        <% rooms.forEach(room => { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-sm bg-dark text-light">
              <div class="card-header bg-secondary text-white">
                <h5 class="card-title mb-0"><%= room.hotel_name %></h5> <!-- ✅ Added hotel name -->
              </div>
              <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">Room for <%= room.capacity %> people</h6>
                <p class="card-text">Price: <strong>$<%= room.price %> per night</strong></p>
                <a href="/hotels/<%= room.hotel_id %>" class="btn btn-outline-light">View Hotel</a>
                <button class="btn btn-primary rent-room" data-id="<%= room.id %>">Rent</button>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>

    <!-- ✅ Reservation Modal (Global, not inside loop) -->
    <div id="reservationModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h3 class="text-center">Book a Room</h3>
        <div class="form-group">
          <label for="start-date">Start Date:</label>
          <input type="date" id="start-date" class="form-control" />
        </div>
        <div class="form-group">
          <label for="end-date">End Date:</label>
          <input type="date" id="end-date" class="form-control" />
        </div>
        <button id="confirm-reservation">Confirm Reservation</button>
      </div>
    </div>

    <!-- Include Reservation Script -->
    <script src="/javascripts/makeReservation.js"></script>

    <!-- Include Footer -->
    <%- include("partials/footer") %>
  </body>
</html>
