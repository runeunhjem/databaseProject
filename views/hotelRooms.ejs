<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body class="d-flex flex-column min-vh-100">
    <%- include("partials/navbar") %>

    <div class="container text-center mt-5">
      <h1 class="text-light"><%= hotel.name %> - Available Rooms</h1>
      <h2 class="text-light"><%= hotel.location %></h2>

      <% if (rooms.length > 0) { %>
        <div class="row mt-4 justify-content-center">
          <% rooms.forEach(room => { %>
            <div class="col-md-4 mb-4">
              <div class="card bg-dark text-light p-3 shadow-lg">
                <div class="card-body">
                  <h5 class="card-title"><%= room.room_type %></h5>
                  <p class="card-text"><strong>Capacity:</strong> <%= room.max_capacity %> people</p>
                  <p class="card-text"><strong>Price:</strong> $<%= room.price %> per night</p>

                  <% if (room.is_reserved) { %>
                    <button class="btn btn-danger" disabled>Already Reserved</button>
                  <% } else { %>
                    <% if (user) { %>
                      <button class="btn btn-primary rent-room" data-id="<%= room.id %>">
                        <i class="bi bi-door-open"></i> Rent This Room
                      </button>
                    <% } %>
                  <% } %>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <h4 class="text-warning">No rooms available at this hotel.</h4>
      <% } %>
    </div>

    <%- include("partials/footer") %>
    <!-- ✅ Reservation Modal -->
    <div id="reservationModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h3 class="text-center mt-3">Book a Room</h3>
        <div class="form-group">
          <label for="start-date">Start Date:</label>
          <input type="date" id="start-date" class="form-control" />
        </div>
        <div class="form-group">
          <label for="end-date">End Date:</label>
          <input type="date" id="end-date" class="form-control" />
        </div>
        <button id="confirm-reservation" class="btn btn-primary">Confirm Reservation</button>
      </div>
    </div>

    <!-- ✅ Scripts -->
    <script src="/javascripts/makeReservation.js"></script>
  </body>
</html>
