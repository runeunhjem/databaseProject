<div class="admin-section">
  <h2>Manage Rooms</h2>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th class="text-start">Hotel Name</th>
        <th>ID</th>
        <th class="text-start">Room Type</th>
        <th class="text-start">Capacity</th>
        <th class="text-center">Price per Night</th>
        <th>Hotel Details</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% rooms.forEach(room => { %>
      <tr>
        <td class="text-start"><strong><%= room.hotel_name %></strong></td>
        <td><%= room.id %></td>
        <td class="text-start"><%= room.room_type %></td>
        <td class="text-start"><%= room.capacity %> people</td>
        <td class="text-center">$<%= room.price %></td>
        <td>
          <a href="/hotels/<%= room.hotel_id %>" class="btn btn-info btn-sm view">
            <i class="bi bi-eye"></i> View Hotel
          </a>
        </td>
        <td>
          <% if (user.role === 'Admin') { %>
          <button class="btn btn-danger btn-sm delete-room" data-id="<%= room.id %>">
            <i class="bi bi-trash"></i>
          </button>
          <% } %>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
