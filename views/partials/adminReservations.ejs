<div class="admin-section">
  <h2>Manage Reservations</h2>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th>ID</th>
        <th>User</th>
        <th>Hotel</th>
        <th>Room</th>
        <th>From</th>
        <th>To</th>
        <th>Total Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% reservations.forEach(reservation => { %>
        <tr>
          <td><%= reservation.id %></td>
          <td><%= reservation.userName %> (ID: <%= reservation.userId %>)</td>
          <td><%= reservation.hotelName %></td>
          <td><%= reservation.roomType %> (ID: <%= reservation.roomId %>)</td>
          <td><%= reservation.startDate %></td>
          <td><%= reservation.endDate %></td>
          <td>$<%= reservation.totalPrice %></td>
          <td>
            <button class="btn btn-danger btn-sm delete-reservation" data-id="<%= reservation.id %>">üóëÔ∏è</button>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
