<div class="admin-section">
  <h2>Manage Reservations</h2>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th class="text-nowrap">ID</th>
        <th class="text-start text-nowrap">User</th>
        <th class="text-start text-nowrap">Hotel</th>
        <th class="text-start text-nowrap">Room</th>
        <th class="text-nowrap">From</th>
        <th class="text-nowrap">To</th>
        <th class="text-nowrap">Total Price</th>
        <th class="text-nowrap">Action</th>
      </tr>
    </thead>
    <tbody>
      <% reservations.forEach(reservation => { %>
      <tr>
        <td class="text-nowrap"><%= reservation.id %></td>
        <td class="text-start text-nowrap"><%= reservation.userName %> (ID: <%= reservation.userId %>)</td>
        <td class="text-start text-nowrap"><%= reservation.hotelName %></td>
        <td class="text-start text-nowrap"><%= reservation.roomType %> (ID: <%= reservation.roomId %>)</td>
        <td class="text-nowrap"><%= reservation.startDate %></td>
        <td class="text-nowrap"><%= reservation.endDate %></td>
        <td class="text-nowrap">$<%= reservation.totalPrice %></td>
        <td class="text-nowrap">
          <button class="btn btn-danger btn-sm delete-reservation" data-id="<%= reservation.id %>">
            <i class="bi bi-trash"></i>
          </button>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
