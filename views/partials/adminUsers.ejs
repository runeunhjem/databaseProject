<div class="admin-section">
  <h2>Manage Users</h2>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th>ID</th>
        <th>Full Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Reservations</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.firstName %> <%= user.lastName %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><a href="/users/<%= user.id %>" class="btn btn-info btn-sm">View</a></td>
          <td>
            <% if (user.role !== 'Admin') { %>
              <button class="btn btn-danger btn-sm delete-user" data-id="<%= user.id %>">🗑️</button>
            <% } %>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
