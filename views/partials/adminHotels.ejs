<div class="admin-section">
  <h2>Manage Hotels</h2>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th>ID</th>
        <th>Hotel Name</th>
        <th>Location</th>
        <th>Average Rating</th>
        <th>Reservations</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% hotels.forEach(hotel => { %>
        <tr>
          <td><%= hotel.id %></td>
          <td><%= hotel.name %></td>
          <td><%= hotel.location %></td>
          <td><%= hotel.avgRating %></td>
          <td><a href="/hotels/<%= hotel.id %>" class="btn btn-info btn-sm">View</a></td>
          <td>
            <button class="btn btn-danger btn-sm delete-hotel" data-id="<%= hotel.id %>">🗑️</button>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
