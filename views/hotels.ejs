<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body class="d-flex flex-column min-vh-100">
    <%- include("partials/navbar") %>

    <div class="container text-center mt-5 main">
      <h1 class="page-title">Choose a Hotel</h1>

      <div class="hotel-list">
        <% hotels.forEach(hotel => { %>
        <div class="hotel-card">
          <div class="hotel-info">
            <p class="hotel-name"><%= hotel.name %></p>
            <p class="hotel-location"><i class="bi bi-geo-alt-fill"></i> <%= hotel.location %></p>
          </div>
          <div class="hotel-actions">
            <% if (user) { %>
            <a href="/hotels/<%= hotel.id %>/rooms" class="btn btn-primary">
              <i class="bi bi-key"></i> Rent a Room
            </a>
            <% } %>
            <a href="/hotels/<%= hotel.id %>" class="btn btn-secondary">
              <i class="bi bi-eye"></i> Details
            </a>
            <% if (user && user.role === 'Admin') { %>
            <button class="btn btn-danger delete-hotel" data-id="<%= hotel.id %>">
              <i class="bi bi-trash"></i> Delete
            </button>
            <% } %>
          </div>
        </div>
        <% }); %>
      </div>

      <!-- âœ… Add Hotel Button -->
      <% if (user && user.role === 'Admin') { %>
      <div class="add-hotel-container">
        <button id="add-hotel" class="btn add-hotel-btn">
          <i class="bi bi-plus-circle"></i> New Hotel
        </button>
      </div>
      <% } %>
    </div>

    <!-- Back to Top Button -->
    <button id="backToTop" class="back-to-top btn btn-warning">
      <i class="bi bi-arrow-up-circle-fill"></i>
    </button>

    <!-- Include Scripts -->
    <script src="/javascripts/backToTop.js"></script>
    <script src="/javascripts/addHotel.js"></script>
    <script src="/javascripts/deleteHotel.js"></script>

    <%- include("partials/footer") %>
  </body>
</html>
