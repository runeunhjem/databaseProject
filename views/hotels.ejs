<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body class="d-flex flex-column min-vh-100">
    <%- include("partials/navbar") %>

    <div class="container text-center mt-5 main">
      <h1 class="page-title">Choose a Hotel</h1>

      <div class="hotel-list">
        <% hotels.forEach(hotel => { %>
        <div class="hotel-card">
          <div class="hotel-info">
            <span class="hotel-name"><%= hotel.name %></span>
            <span class="hotel-location"><%= hotel.location %></span>
          </div>
          <div class="hotel-actions">
            <% if (user) { %>
            <a href="/rooms/<%= hotel.id %>" class="btn-primary">Rent a Room</a>
            <% } %>
            <a href="/hotels/<%= hotel.id %>" class="btn-secondary">Details</a>
            <% if (user && user.role === 'Admin') { %>
            <button class="btn-danger delete-hotel" data-id="<%= hotel.id %>">Delete</button>
            <% } %>
          </div>
        </div>
        <% }); %>
      </div>

      <!-- âœ… Add Hotel Button -->
      <% if (user && user.role === 'Admin') { %>
      <div class="add-hotel-container">
        <button id="add-hotel" class="btn-primary add-hotel-btn">+ New Hotel</button>
      </div>
      <% } %>
    </div>

    <!-- Include Scripts -->
    <script src="/javascripts/addHotel.js"></script>
    <script src="/javascripts/deleteHotel.js"></script>

    <%- include("partials/footer") %>
  </body>
</html>
