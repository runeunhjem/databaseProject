<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hotels</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/stylesheets/hotels.css" rel="stylesheet" />
  </head>
  <body>
    <div class="container">
      <h2 class="p-3 text-center">Choose a Hotel</h2>
      <div class="list-group">
        <% hotels.forEach(function(hotel) { %>
        <div class="row px-3 py-2 w-100 align-items-center">
          <span class="col py-2 bg-info text-white rounded">
            <%= hotel.name %>
            <span class="float-end"><%= hotel.location %></span>
          </span>
          <a href="/rooms/<%= hotel.id %>" class="col-auto btn btn-secondary mx-1">Rent a Room</a>
          <a href="/hotels/<%= hotel.id %>" class="col-auto btn btn-secondary mx-1">Details</a>
          <button class="col-auto btn btn-danger delete-hotel" data-id="<%= hotel.id %>">Delete</button>
        </div>
        <% }); %>
      </div>
      <!-- Add New Hotel Button -->
      <button id="add-hotel" class="right btn btn-primary m-4">+ New Hotel</button>
    </div>

    <!-- Include Scripts -->
    <script src="/javascripts/addHotel.js"></script>
    <script src="/javascripts/deleteHotel.js"></script>
  </body>
</html>
