  <%- include("partials/head") %>
  <body>
    <%- include("partials/navbar") %>

    <div class="container">
      <h2 class="text-center text-primary"><i><%= user.firstName %> <%= user.lastName %></i></h2>
      <h3 class="p-3">My Reservations:</h3>

      <% if (user.reservations.length > 0) { %>
      <table class="table table-hover table-bordered">
        <thead class="table-dark">
          <!-- âœ… Consistent dark theme -->
          <tr>
            <th>Hotel Name</th>
            <th>Hotel Location</th>
            <th>Room Capacity</th>
            <th>Price per Day</th>
            <th>Rent From</th>
            <th>Rent To</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% user.reservations.forEach(reservation => { %>
          <tr>
            <td><%= reservation.hotelName %></td>
            <td><%= reservation.hotelLocation %></td>
            <td><%= reservation.capacity %></td>
            <td><strong>$<%= reservation.price %></strong></td>
            <td><%= new Date(reservation.rentFrom).toLocaleDateString() %></td>
            <td><%= new Date(reservation.rentTo).toLocaleDateString() %></td>
            <td>
              <button class="btn btn-danger delete-reservation" data-id="<%= reservation.id %>">Cancel</button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } else { %>
      <p class="text-center text-muted">No reservations found.</p>
      <% } %>
    </div>
  </body>
</html>
